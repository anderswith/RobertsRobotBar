<UserControl x:Class="RobotBarApp.View.StatistikView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             Background="#FFE5E5E5">

    <Grid Margin="30">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ==========================
             FILTERS (EVENT + DATO)
        =========================== -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">

            <!-- EVENT DROPDOWN -->
            <StackPanel>
                <TextBlock Text="Event:" FontWeight="Bold"/>
                <ComboBox ItemsSource="{Binding Events}"
                          SelectedItem="{Binding SelectedEvent, Mode=TwoWay}"
                          DisplayMemberPath="Name"
                          Width="200"/>
            </StackPanel>

            <!-- FROM DATE -->
            <StackPanel>
                <TextBlock Text="Fra:" FontWeight="Bold"/>
                <DatePicker SelectedDate="{Binding FromDate, Mode=TwoWay}" Width="160"/>
            </StackPanel>

            <!-- TO DATE -->
            <StackPanel>
                <TextBlock Text="Til:" FontWeight="Bold"/>
                <DatePicker SelectedDate="{Binding ToDate, Mode=TwoWay}" Width="160"/>
            </StackPanel>

            <!-- Refresh button -->
            <Button Content="Opdater"
                    Command="{Binding RefreshCommand}"
                    Width="120" Height="35"
                    Margin="10,20,0,0"/>
        </StackPanel>


        <!-- ==========================
             DRINK PIE CHART
        =========================== -->
        <Border Grid.Row="1" Margin="10" Background="White" Padding="20">
            <oxy:PlotView Model="{Binding DrinkPieChart}" />
        </Border>

        <!-- ==========================
             INGREDIENT BAR CHART
        =========================== -->
        <Border Grid.Row="2" Margin="10" Background="White" Padding="20">
            <oxy:PlotView Model="{Binding IngredientBarChart}" />
        </Border>

        <!-- ==========================
             LOG LIST
        =========================== -->
        <Border Grid.Row="3" Margin="10" Background="White" Padding="20">
            <DataGrid ItemsSource="{Binding Logs}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tid" Binding="{Binding Timestamp}" Width="180"/>
                    <DataGridTextColumn Header="Besked" Binding="{Binding Message}" Width="*"/>
                </DataGrid.Columns>

            </DataGrid>
        </Border>

    </Grid>
</UserControl>
