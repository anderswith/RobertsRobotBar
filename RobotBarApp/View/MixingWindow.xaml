<Window x:Class="RobotBarApp.MixingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mixing Drink..."
        Height="400" Width="600"
        Background="#12121A"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Nice glowing background gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#23233A" Offset="0"/>
                <GradientStop Color="#3C3C70" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="🍸 Mixing Your Drink..."
                       Foreground="#FFD966"
                       FontSize="28"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <ProgressBar x:Name="MixProgress"
                         Width="300" Height="20"
                         Value="0"
                         Foreground="#FFD966"
                         Background="#333"
                         BorderThickness="0"/>

            <Button Content="Close"
                    Width="100"
                    Height="35"
                    Margin="0,30,0,0"
                    Click="Close_Click"
                    Background="#FFD966"
                    Foreground="#1E1E2E"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>