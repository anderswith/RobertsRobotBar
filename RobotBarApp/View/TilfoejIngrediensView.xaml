<UserControl x:Class="RobotBarApp.View.TilfoejIngrediensView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000"
             Background="#FFE5E5E5">

    <!-- Center form and limit width so it doesn't stretch across the whole screen -->
    <Border HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,20,0,0"
            Padding="30"
            Width="950"
            Background="Transparent">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />   <!-- Navn / Størrelse / Billede -->
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />   <!-- Type -->
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />   <!-- Holder(e) / Dosering -->
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />   <!-- Script -->
                <RowDefinition Height="*" />      <!-- Spacer -->
                <RowDefinition Height="Auto" />   <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Outer layout: label column + content column -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />  <!-- labels -->
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="*" />     <!-- content -->
            </Grid.ColumnDefinitions>

            <!-- Row 0: Navn + Størrelse + Billede -->

            <!-- Navn label -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Text="Navn:"/>

            <!-- Inner grid for Navn textbox, Størrelse, Billede -->
            <Grid Grid.Row="0" Grid.Column="2" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />   <!-- Navn textbox -->
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="Auto" /> <!-- 'Størrelse:' label -->
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="70" />   <!-- size textbox -->
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="Auto" /> <!-- 'cl' -->
                    <ColumnDefinition Width="35" />
                    <ColumnDefinition Width="Auto" /> <!-- 'Billed:' label -->
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="60" />   <!-- image preview -->
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="80" />   <!-- 'Vælg' button -->
                </Grid.ColumnDefinitions>

                <!-- Navn textbox -->
                <TextBox Grid.Column="0"
                         Height="35"
                         FontSize="16"
                         Padding="6"
                         HorizontalAlignment="Stretch"
                         Text="{Binding IngredientName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Størrelse label -->
                <TextBlock Grid.Column="2"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Text="Størrelse:"/>

                <!-- Størrelse textbox -->
                <TextBox Grid.Column="4"
                         Height="35"
                         FontSize="16"
                         Padding="6"
                         Text="{Binding SizeCl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <!-- cl -->
                <TextBlock Grid.Column="6"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Text="cl" />

                <!-- Billed label -->
                <TextBlock Grid.Column="8"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Text="Billede:"/>

                <!-- Preview image -->
                <Border Grid.Column="10"
                        Width="60" Height="40"
                        BorderBrush="Black"
                        BorderThickness="2"
                        Background="White">
                    <Image Source="{Binding ImagePreview, Mode=OneWay}"
                           Stretch="Uniform" />
                </Border>

                <!-- Vælg button -->
                <Button Grid.Column="12"
                        Content="Vælg"
                        Width="80"
                        Height="35"
                        Padding="10,2"
                        Command="{Binding ChooseImageCommand}" />
            </Grid>

            <!-- Row 2: Type -->

            <TextBlock Grid.Row="2" Grid.Column="0"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Text="Type:"/>

            <StackPanel Grid.Row="2" Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="0,0,0,10">
                <RadioButton Content="Alkohol"
                             GroupName="TypeGroup"
                             FontSize="16"
                             Margin="0,0,20,0"
                             IsChecked="{Binding IsAlkohol, Mode=TwoWay}" />
                <RadioButton Content="Mock"
                             GroupName="TypeGroup"
                             FontSize="16"
                             Margin="0,0,20,0"
                             IsChecked="{Binding IsMock, Mode=TwoWay}" />
                <RadioButton Content="Syrup"
                             GroupName="TypeGroup"
                             FontSize="16"
                             Margin="0,0,20,0"
                             IsChecked="{Binding IsSyrup, Mode=TwoWay}" />
                <RadioButton Content="Sodavand/saftevand"
                             GroupName="TypeGroup"
                             FontSize="16"
                             IsChecked="{Binding IsSoda, Mode=TwoWay}" />
            </StackPanel>

            <!-- Row 4: Holder(e) + Dosering -->

            <TextBlock Grid.Row="4" Grid.Column="0"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Text="Holder(e):"/>

            <!-- Inner grid for Holder combobox and Dosering -->
            <Grid Grid.Row="4" Grid.Column="2" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />   <!-- Holder combo -->
                    <ColumnDefinition Width="40" />   <!-- gap -->
                    <ColumnDefinition Width="Auto" /> <!-- 'Dosering:' -->
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" /> <!-- radios -->
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0"
                          Height="35"
                          FontSize="16"
                          ItemsSource="{Binding Holders}"
                          SelectedItem="{Binding SelectedHolder, Mode=TwoWay}" />

                <TextBlock Grid.Column="2"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Text="Dosering:"/>

                <StackPanel Grid.Column="4"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <RadioButton Content="Single"
                                 GroupName="DoseringGroup"
                                 FontSize="16"
                                 Margin="0,0,20,0"
                                 IsChecked="{Binding IsSingleDose, Mode=TwoWay}" />
                    <RadioButton Content="Dobbel"
                                 GroupName="DoseringGroup"
                                 FontSize="16"
                                 IsChecked="{Binding IsDoubleDose, Mode=TwoWay}" />
                </StackPanel>
            </Grid>

            <!-- Row 6: Script -->

            <TextBlock Grid.Row="6" Grid.Column="0"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Text="Script:"/>

            <TextBox Grid.Row="6" Grid.Column="2"
                     Height="40"
                     FontSize="16"
                     Padding="6"
                     HorizontalAlignment="Stretch"
                     Text="{Binding ScriptText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Row 8: Buttons -->

            <!-- Guide bottom left -->
            <Button Grid.Row="8" Grid.Column="0"
                    Content="Guide"
                    Width="100"
                    Height="40"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="#FFB0B0B0"
                    BorderBrush="#FF888888"
                    Command="{Binding GuideCommand}" />

            <!-- Annullér & Gem bottom right -->
            <StackPanel Grid.Row="8" Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="Run Test Script"
                        Width="110"
                        Height="40"
                        Background="White"
                        Margin="0,0,10,0"
                        Command="{Binding RunTestScriptCommand}" />
                <Button Content="Annullér"
                        Width="110"
                        Height="40"
                        Background="White"
                        Margin="0,0,10,0"
                        Command="{Binding CancelCommand}" />
                <Button Content="Gem"
                        Width="110"
                        Height="40"
                        Background="#FF6BE86B"
                        Command="{Binding SaveCommand}" />
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
