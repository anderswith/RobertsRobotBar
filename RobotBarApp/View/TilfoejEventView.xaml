<UserControl x:Class="RobotBarApp.View.TilfoejEventView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:RobotBarApp.ViewModels"
             mc:Ignorable="d"
             Background="#FFE5E5E5">

    <Grid>
        <!-- Main container -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TOP TEXT (handled by MainWindow, so empty here) -->
            <TextBlock Grid.Row="0"/>

            <!-- STEP CONTENT -->
            <Grid Grid.Row="1">

                <!-- ============ STEP 1 ============ -->
                <Grid x:Name="Step1"
                      Visibility="{Binding Step, ConverterParameter=1,
                                           Converter={StaticResource StepToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Name -->
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,40,0,20">
                        <TextBlock Text="Navn:" FontSize="26" Foreground="Gray" Margin="0,0,0,10"
                                   HorizontalAlignment="Center"/>
                        <Border Width="400" Height="50" Background="White" CornerRadius="20">
                            <TextBox Text="{Binding EventName}" FontSize="24" Padding="10"
                                     Background="Transparent" BorderThickness="0"/>
                        </Border>
                    </StackPanel>

                    <!-- Image -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,20">
                        <TextBlock Text="Billede:" FontSize="26" Foreground="Gray"
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        
                        <Border Width="140" Height="140" CornerRadius="20" Background="White"
                                BorderBrush="#DDD" BorderThickness="1">
                            <Image Source="{Binding EventImage}" Stretch="Uniform"/>
                        </Border>

                        <Button Content="Vælg" Command="{Binding ChooseImageCommand}"
                                Width="120" Height="40" Margin="0,10,0,0"
                                Style="{StaticResource RoundButton}"/>
                    </StackPanel>
                </Grid>

                <!-- ============ STEP 2 ============ -->
                <Grid x:Name="Step2"
                      Visibility="{Binding Step, ConverterParameter=2,
                                           Converter={StaticResource StepToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search + label -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,20,0,10">
                        <TextBlock Text="Ingredienser:" FontSize="24" Foreground="Gray"
                                   Margin="0,0,20,0"/>
                        <TextBox Text="{Binding IngredientSearch}"
                                 Width="200" Height="40" Padding="10"
                                 FontSize="20"/>
                    </StackPanel>

                    <!-- Scrollable ingredient list -->
                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Disabled" Height="130">
                        <ItemsControl ItemsSource="{Binding FilteredIngredients}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="140" Height="90"
                                            Background="White"
                                            CornerRadius="15"
                                            Margin="5"
                                            BorderBrush="#DDD" BorderThickness="1">
                                        <Button Command="{Binding DataContext.AddIngredientCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <TextBlock Text="{Binding Name}" FontSize="20"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Button>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Rack + Menu -->
                    <Grid Grid.Row="2" Margin="0,30,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Rack -->
                        <UniformGrid Columns="8" Rows="3" Grid.Column="0">
                            <ItemsControl ItemsSource="{Binding RackItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Image Source="{Binding ImageSource}" Height="70" />
                                            <Rectangle Width="50" Height="5" Fill="Black"
                                                       VerticalAlignment="Bottom" Margin="0,40,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </UniformGrid>

                        <!-- Menu -->
                        <StackPanel Grid.Column="1" Margin="20,0,0,0"
                                    Visibility="{Binding HasMenu, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Menukort:" FontSize="22" Foreground="Gray" Margin="0,0,0,10"/>
                             <Border Background="White" CornerRadius="10"
                                     Padding="10" Height="250">
                                 <ListBox ItemsSource="{Binding MenuDrinks}" FontSize="18"/>
                             </Border>
                         </StackPanel>

                    </Grid>
                </Grid>
            </Grid>

            <!-- Bottom buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Annuller" Command="{Binding CancelCommand}"
                        Width="140" Height="50" Style="{StaticResource RoundButton}"/>

                <Button Grid.Column="2" Content="Næste" Command="{Binding NextCommand}"
                        Width="140" Height="50" Style="{StaticResource RoundButton}"
                        HorizontalAlignment="Center"
                        Visibility="{Binding Step, ConverterParameter=1,
                                             Converter={StaticResource StepToVisibilityConverter}}"/>

                <Button Grid.Column="3" Content="Gem" Command="{Binding SaveCommand}"
                        Width="140" Height="50" Style="{StaticResource RoundButton}"
                        Visibility="{Binding Step, ConverterParameter=2,
                                             Converter={StaticResource StepToVisibilityConverter}}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
