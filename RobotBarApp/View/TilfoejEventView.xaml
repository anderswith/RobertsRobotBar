<UserControl x:Class="RobotBarApp.View.TilfoejEventView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FFE5E5E5">

    <UserControl.Resources>

        <!-- Colors -->
        <SolidColorBrush x:Key="TopBarBrush" Color="#4F7C97"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#63E36B"/>
        <SolidColorBrush x:Key="CardBrush" Color="White"/>

        <!-- TEXTBOX STYLE -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="BorderBrush" Value="#B0B0B0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="12"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ROUND BUTTON -->
        <Style x:Key="RoundButton" TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="12,0,0,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#B0B0B0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- SAVE BUTTON -->
        <Style x:Key="SaveButton" BasedOn="{StaticResource RoundButton}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- COMBOBOX -->
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="12,0,0,0"/>
        </Style>

        <!-- INGREDIENT TEMPLATE -->
        <DataTemplate x:Key="IngredientTemplate">
            <DockPanel Margin="2">
                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                          Width="24" Height="24"
                          Margin="8,0,0,0"
                          VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Name}"
                           FontSize="20"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"/>
            </DockPanel>
        </DataTemplate>

        <!-- RACK SLOT TEMPLATE -->
        <DataTemplate x:Key="RackSlotTemplate">
            <Grid Margin="16,18" Height="170">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="44"/>
                </Grid.RowDefinitions>

                <!-- Bottle -->
                <Border Grid.Row="0" Background="Transparent"
                        HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <Image Source="{Binding BottleImage}" Width="90" Stretch="Uniform">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BottleImage}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding BottleImage}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Border>

                <!-- Bottom bar -->
                <Border Grid.Row="1" Background="Black" CornerRadius="2">
                    <TextBlock Text="{Binding Number}"
                               Foreground="White"
                               FontSize="22"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </DataTemplate>

    </UserControl.Resources>

    <!-- FULLSCREEN GRID -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CONTENT AREA -->
        <Grid Grid.Row="0" Margin="26,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- NAME / IMAGE / MENU -->
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Event Name -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                    <TextBlock Text="Navn:" FontSize="22" Margin="0,0,12,0"/>
                    <TextBox Width="280" Text="{Binding EventName, Mode=TwoWay}"/>
                </StackPanel>

                <!-- Image -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                    <Image Source="{Binding ImagePath}"
                           Width="160" Height="100" Stretch="UniformToFill" Margin="0,0,12,0"/>
                    <Button Content="Vælg" Style="{StaticResource RoundButton}"
                            Command="{Binding ChooseImageCommand}"/>
                </StackPanel>

                <!-- Menu -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="28,0,0,12">
                    <TextBlock Text="Menu:" FontSize="22" Margin="0,0,12,0"/>
                    <ComboBox Width="200"
                              ItemsSource="{Binding Menus}"
                              SelectedItem="{Binding SelectedMenu}"
                              DisplayMemberPath="Name"/>
                </StackPanel>
            </Grid>

            <!-- INGREDIENT LIST -->
            <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="40,0,0,0">
                <TextBlock Text="Ingredienser:" FontSize="22" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <Border Background="{StaticResource CardBrush}" BorderBrush="#B0B0B0" BorderThickness="2" CornerRadius="14" Padding="6">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="420">
                        <ListBox ItemsSource="{Binding Ingredients}"
                                 ItemTemplate="{StaticResource IngredientTemplate}"
                                 BorderThickness="0"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>

            <!-- RACK TITLE -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Stativ:" FontSize="22" Margin="0,0,0,8"/>

            <!-- RACK GRID -->
            <Border Grid.Row="1" Grid.Column="0" Margin="0,30,40,0" Background="Transparent">
                <ItemsControl ItemsSource="{Binding RackSlots}" ItemTemplate="{StaticResource RackSlotTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="3" Columns="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Border>

        </Grid>

        <!-- BOTTOM BUTTONS -->
        <Grid Grid.Row="1" Margin="26,0,26,22">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="Annullér"
                    Style="{StaticResource RoundButton}"
                    Command="{Binding CancelCommand}"/>

            <Button Grid.Column="2"
                    Content="Gem"
                    Style="{StaticResource SaveButton}"
                    Margin="12,0,0,0"
                    Command="{Binding SaveCommand}"/>
        </Grid>

    </Grid>
</UserControl>
