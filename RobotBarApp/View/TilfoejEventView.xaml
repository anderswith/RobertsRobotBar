<UserControl x:Class="RobotBarApp.View.TilfoejEventView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="#FFE5E5E5">

    <UserControl.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="TopBarBrush" Color="#4F7C97"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#63E36B"/>
        <SolidColorBrush x:Key="CardBrush" Color="White"/>

        <!-- Common rounded textbox style -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="BorderBrush" Value="#B0B0B0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="12" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded button style -->
        <Style x:Key="RoundButton" TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="12,0,0,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#B0B0B0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Save button -->
        <Style x:Key="SaveButton" BasedOn="{StaticResource RoundButton}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- ComboBox rounded -->
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="12,0,0,0"/>
        </Style>

        <!-- ListBox item with checkbox for ingredients -->
        <DataTemplate x:Key="IngredientTemplate">
            <DockPanel Margin="2">
                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Width="24" Height="24" Margin="8,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Name}" FontSize="20" Margin="12,0,0,0" VerticalAlignment="Center"/>
            </DockPanel>
        </DataTemplate>

        <!-- RACK SLOT TEMPLATE -->
        <!-- Each slot shows a black bar with the number and (if ImageSource provided) a bottle above it -->
        <DataTemplate x:Key="RackSlotTemplate">
            <Grid Margin="16,18" Height="170">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>    <!-- bottle space -->
                    <RowDefinition Height="44"/>   <!-- black bar -->
                </Grid.RowDefinitions>

                <!-- Bottle image (optional) -->
                <Border Grid.Row="0" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <Image Source="{Binding BottleImage}" Width="90" Stretch="Uniform">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BottleImage}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding BottleImage}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Border>

                <!-- Black bar with number -->
                <Border Grid.Row="1" Background="Black" CornerRadius="2">
                    <TextBlock Text="{Binding Number}"
                               Foreground="White"
                               FontSize="22"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Remove local top bar; only content and bottom buttons remain -->
            <RowDefinition Height="*"/>      <!-- Content -->
            <RowDefinition Height="Auto"/>   <!-- Bottom buttons -->
        </Grid.RowDefinitions>

        <!-- CONTENT -->
        <Grid Grid.Row="0" Margin="26,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>   <!-- Left: fields + rack -->
                <ColumnDefinition Width="2*"/>   <!-- Right: ingredients -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>   <!-- fields -->
                <RowDefinition Height="*"/>      <!-- rack -->
            </Grid.RowDefinitions>

            <!-- Top fields -->
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Navn -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                    <TextBlock Text="Navn:" Margin="0,0,12,0" FontSize="22" VerticalAlignment="Center"/>
                    <TextBox Width="280" Text="{Binding EventName, Mode=TwoWay}"/>
                </StackPanel>

                <!-- Billed -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,12">
                    <Image Source="{Binding ImagePath}"
                           Width="160" Height="100" Stretch="UniformToFill" Margin="0,0,12,0"/>
                    <Button Content="Vælg" Style="{StaticResource RoundButton}" Click="ChooseImage_Click"/>
                </StackPanel>

                <!-- Menu -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="28,0,0,12">
                    <TextBlock Text="Menu:" Margin="0,0,12,0" FontSize="22" VerticalAlignment="Center"/>
                    <ComboBox Width="200"
                              ItemsSource="{Binding MenuOptions}"
                              SelectedItem="{Binding SelectedMenu, Mode=TwoWay}"/>
                </StackPanel>
            </Grid>

            <!-- Right: Ingredients -->
            <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="40,0,0,0">
                <TextBlock Text="Ingredienser:" FontSize="22" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <Border Background="{StaticResource CardBrush}" BorderBrush="#B0B0B0" BorderThickness="2" CornerRadius="14" Padding="6" >
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="420">
                        <ListBox ItemsSource="{Binding Ingredients}"
                                 ItemTemplate="{StaticResource IngredientTemplate}"
                                 BorderThickness="0"
                                 SelectionMode="Extended"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>

            <!-- Rack label -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Stativ:" FontSize="22" Margin="0,0,0,8"/>

            <!-- RACK (slots 1..24) -->
            <Border Grid.Row="1" Grid.Column="0" Margin="0,30,40,0" Background="Transparent">
                <ItemsControl ItemsSource="{Binding RackSlots}" ItemTemplate="{StaticResource RackSlotTemplate}">
                    <ItemsControl.ItemsPanel>
                        <!-- 3 rows, 8 columns -->
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="3" Columns="8" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Border>
        </Grid>

        <!-- BOTTOM BUTTONS -->
        <Grid Grid.Row="1" Margin="26,0,26,22">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="Annullér" Style="{StaticResource RoundButton}" Click="Cancel_Click" />
            <Button Grid.Column="2" Content="Gem" Style="{StaticResource SaveButton}" Margin="12,0,0,0" Click="Save_Click"/>
        </Grid>
    </Grid>
</UserControl>
