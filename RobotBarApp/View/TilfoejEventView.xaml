<UserControl x:Class="RobotBarApp.View.TilfoejEventView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:RobotBarApp.Converters"
             xmlns:global="clr-namespace:"
             mc:Ignorable="d"
             Background="#FFE5E5E5">


    <!-- converter registration -->
    <UserControl.Resources>
        <conv:PathToImageConverter x:Key="PathToImageConverter" />
    </UserControl.Resources>


    <Grid>
        <!-- Main container -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <!-- TOP TEXT (empty) -->
            <TextBlock Grid.Row="0" />


            <!-- STEP CONTENT -->
            <Grid Grid.Row="1">


                <!-- STEP 1 -->
                <Grid x:Name="Step1"
                      Visibility="{Binding Step, ConverterParameter=1,
                                           Converter={StaticResource StepToVisibilityConverter}}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Name -->
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,40,0,20">
                        <TextBlock Text="Navn:" FontSize="26" Foreground="Gray" Margin="0,0,0,10"
                                   HorizontalAlignment="Center" />
                        <Border Width="400" Height="50" Background="White" CornerRadius="20">
                            <TextBox Text="{Binding EventName}"
                                     MaxLength="30"
                                     FontSize="24"
                                     Padding="10"
                                     Background="Transparent" BorderThickness="0" />
                        </Border>
                        <TextBlock Text="(maks. 30 tegn)"
                                   FontSize="14"
                                   Foreground="#FF666666"
                                   HorizontalAlignment="Center"
                                   Margin="0,6,0,0" />
                    </StackPanel>

                    <!-- Image -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,20">
                        <TextBlock Text="Billede:" FontSize="26" Foreground="Gray"
                                   HorizontalAlignment="Center" Margin="0,0,0,10" />

                        <Border Width="140" Height="140" CornerRadius="20" Background="White"
                                BorderBrush="#DDD" BorderThickness="1">
                            <Image Source="{Binding ImagePath, Converter={StaticResource PathToImageConverter}}"
                                   Stretch="Uniform" />
                        </Border>

                        <Button Content="Vælg" Command="{Binding ChooseImageCommand}"
                                Width="120" Height="40" Margin="0,10,0,0"
                                Style="{StaticResource RoundButton}" />
                    </StackPanel>

                </Grid>



                <!-- STEP 2 -->
                <Grid x:Name="Step2"
                      Visibility="{Binding Step, ConverterParameter=2,
                                           Converter={StaticResource StepToVisibilityConverter}}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>



                    <!-- Ingredient list -->
                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Disabled" Height="130">
                        <ItemsControl ItemsSource="{Binding FilteredIngredients}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="140" Height="90"
                                            Background="White"
                                            CornerRadius="15"
                                            Margin="5"
                                            BorderBrush="#DDD" BorderThickness="1">
                                        <Button
                                            Command="{Binding DataContext.AddIngredientCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                            <TextBlock Text="{Binding Name}" FontSize="20"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Button>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>


                    <!-- Rack -->
                    <ItemsControl Grid.Row="2" ItemsSource="{Binding RackItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="8" Rows="3" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>

                                <!-- ENTIRE SLOT CLICK -->
                                <Button Command="{Binding DataContext.SelectSlotCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                        BorderBrush="Transparent">

                                    <StackPanel>
                                        <Image Source="{Binding Ingredient.Image, Converter={StaticResource PathToImageConverter}}"
                                               Height="70"/>

                                        <Rectangle Width="50"
                                                   Height="5"
                                                   Fill="Black"
                                                   Margin="0,4,0,0" />
                                    </StackPanel>
                                </Button>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </Grid>

            </Grid>



            <!-- BOTTOM BUTTONS -->
            <Grid Grid.Row="2" Margin="0,20,0,0">

                <!-- back -->
                <Button Grid.Column="0" Content="Annuller" Command="{Binding CancelCommand}"
                        Width="140" Height="50" Style="{StaticResource RoundButton}"
                        HorizontalAlignment="Left" />

                <!-- next -->
                <Button Grid.Column="3" Content="Næste" Command="{Binding NextCommand}"
                        Width="140" Height="50" Style="{StaticResource RoundButton}"
                        HorizontalAlignment="Right" />

                <!-- save -->
                <Button Grid.Column="3" Content="Gem" Command="{Binding SaveCommand}"
                        Visibility="{Binding Step, ConverterParameter=2,
                                             Converter={StaticResource StepToVisibilityConverter}}"
                        Width="140" Height="50" Style="{StaticResource RoundButton}"
                        HorizontalAlignment="Right" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
