<Window x:Class="RobotBarApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RobotBarApp.ViewModels"
        xmlns:view="clr-namespace:RobotBarApp.View"
        xmlns:viewModel="clr-namespace:RobotBarApp.ViewModels"
        xmlns:global="clr-namespace:"
        mc:Ignorable="d"
        Title="Robert's robotbar"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#FFE5E5E5">
    

    <Window.Resources>

        <!-- Shadow -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="10"
                          ShadowDepth="3"
                          Opacity="0.4" />

        <!-- ViewModel -> View templates -->
        <DataTemplate DataType="{x:Type global:EventListViewModel}">
            <view:EventListView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:StatistikViewModel}">
            <view:StatistikView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:KatalogViewModel}">
            <view:KatalogView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TilfoejIngrediensViewModel}">
            <view:TilfoejIngrediensView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TilfoejDrinkViewModel}">
            <view:TilfoejDrinkView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TilfoejMenuViewModel}">
            <view:TilfoejMenuView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TilfoejEventViewModel}">
            <view:TilfoejEventView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:EventViewModel}">
            <view:EventView />
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Border Grid.Row="0"
                Background="#4F7C97"
                Height="110">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Button Grid.Column="0"
                        VerticalAlignment="Center"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding NavigateHomeCommand}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/RobotBarApp;component/Resources/Icons/Roberts_robotbar_logo.png"
                               Margin="0,5,10,10"
                               Stretch="Uniform"/>
                    </StackPanel>
                </Button>

                <!-- Hamburger menu -->
                <Button Grid.Column="2"
                        Width="70"
                        Height="70"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="MenuButton_Click">
                    <Image Height="59"
                           VerticalAlignment="Center"
                           Source="/RobotBarApp;component/Resources/Icons/menu.png"
                           Stretch="Uniform"/>
                </Button>

            </Grid>
        </Border>

        <!-- MAIN CONTENT + MENU -->
        <Grid Grid.Row="1">

            <!-- MAIN CONTENT -->
            <Border Background="#FFE5E5E5">
                <ContentControl Content="{Binding CurrentViewModel}" />
            </Border>

            <!-- OVERLAY -->
            <Rectangle x:Name="MenuOverlay"
                       Fill="Black"
                       Opacity="0"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1"
                       MouseLeftButtonDown="MenuOverlay_MouseLeftButtonDown"/>

            <!-- SIDE MENU -->
            <Border x:Name="SideMenu"
                    Width="260"
                    Background="#FFDDDDDD"
                    HorizontalAlignment="Right"
                    Panel.ZIndex="2"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TranslateTransform X="260"/>
                </Border.RenderTransform>

                <StackPanel Margin="20">
                    <TextBlock Text="Menu"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <Button Content="Opstart"
                            Height="35"
                            Margin="0,0,0,10"
                            Command="{Binding NavigateHomeCommand}"
                            Click="MenuOption_Click"/>

                    <Button Content="Statistik"
                            Height="35"
                            Margin="0,0,0,10"
                            Command="{Binding NavigateStatistikCommand}"
                            Click="MenuOption_Click"/>

                    <Button Content="Katalog"
                            Height="35"
                            Margin="0,0,0,10"
                            Command="{Binding NavigateKatalogCommand}"
                            Click="MenuOption_Click"/>

                    <Button Content="Tilføj Ingrediens"
                            Height="35"
                            Margin="0,0,0,10"
                            Command="{Binding NavigateTilfoejIngrediensCommand}"
                            Click="MenuOption_Click"/>

                    <Button Content="Tilføj Event"
                            Height="35"
                            Margin="0,0,0,10"
                            Command="{Binding NavigateTilfoejEventCommand}"
                            Click="MenuOption_Click"/>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>

</Window>
