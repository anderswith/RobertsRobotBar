<Window x:Class="RobotBarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Robert's robotbar"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#FFE5E5E5">

    <Window.Resources>
        <!-- Simple drop shadow for cards -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="10"
                          ShadowDepth="3"
                          Opacity="0.4" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>    <!-- Top bar -->
            <RowDefinition Height="*"/>       <!-- Content + side menu -->
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Border Grid.Row="0"
                Background="#4F7C97"
                Height="70">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>  <!-- Logo + title -->
                    <ColumnDefinition Width="*"/>     <!-- Spacer -->
                    <ColumnDefinition Width="Auto"/>  <!-- Menu button -->
                </Grid.ColumnDefinitions>

                <!-- Logo + title -->
                <Button Grid.Column="0"
                        VerticalAlignment="Center"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="HomeButton_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Simple house icon -->
                        <Viewbox Width="28" Height="28" Margin="0,0,10,0">
                            <Canvas Width="24" Height="24">
                                <Polygon Points="12,0 24,10 24,24 16,24 16,14 8,14 8,24 0,24 0,10"
                                         Fill="White"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Robert's robotbar"
                                   VerticalAlignment="Center"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </StackPanel>
                </Button>

                <!-- Hamburger menu button -->
                <Button Grid.Column="2"
                        Width="70"
                        Height="70"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="MenuButton_Click">
                    <!-- Use the new menu icon from Resources/Icons/menu.png -->
                    <Image
                           Height="59"
                           VerticalAlignment="Center"
                           Source="/RobotBarApp;component/Resources/Icons/menu.png"
                           Stretch="Uniform"/>
                </Button>
            </Grid>
        </Border>

        <!-- MAIN CONTENT + SIDE MENU -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>          <!-- Main content -->
                <ColumnDefinition x:Name="MenuColumn"
                                  Width="0"/>          <!-- Side menu (collapsed by default) -->
            </Grid.ColumnDefinitions>

            <!-- MAIN CONTENT -->
            <Border Grid.Column="0"
                    Background="#FFE5E5E5">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="FestivalItems">
                        <ItemsControl.ItemsPanel>
                            <!-- WrapPanel makes it responsive: more/less items per row depending on width -->
                            <ItemsPanelTemplate>
                                <WrapPanel Margin="40"
                                           HorizontalAlignment="Center" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- One card -->
                                <StackPanel Margin="30,30,30,40"
                                            Width="320">
                                    <Border CornerRadius="10"
                                            Background="White"
                                            Effect="{StaticResource CardShadow}">
                                        <Image Source="{Binding ImagePath}"
                                               Height="190"
                                               Stretch="UniformToFill"
                                               ClipToBounds="True"/>
                                    </Border>

                                    <TextBlock Text="{Binding Title}"
                                               Margin="0,15,0,0"
                                               FontSize="26"
                                               FontWeight="SemiBold"
                                               Foreground="#666666"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- SIDE MENU (slides in from right when you give MenuColumn a width) -->
            <Border Grid.Column="1"
                    Background="#FFDDDDDD">
                <StackPanel Margin="20">
                    <TextBlock Text="Menu"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>
                    <Button Content="Settings" Margin="0,0,0,10" Height="35"/>
                    <Button Content="About" Margin="0,0,0,10" Height="35"/>
                    <Button Content="Exit" Margin="0,0,0,10" Height="35"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
