<Window x:Class="RobotBarApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Robert's robotbar"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#FFE5E5E5">

    <Window.Resources>
        <!-- Simple drop shadow for cards -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="10"
                          ShadowDepth="3"
                          Opacity="0.4" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>    <!-- Top bar -->
            <RowDefinition Height="*"/>       <!-- Content + overlay/menu -->
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Border Grid.Row="0"
                Background="#4F7C97"
                Height="110"> <!-- increased from 70 -->
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>  <!-- Logo + title -->
                    <ColumnDefinition Width="*"/>     <!-- Spacer -->
                    <ColumnDefinition Width="Auto"/>  <!-- Menu button -->
                </Grid.ColumnDefinitions>

                <!-- Logo + title -->
                <Button Grid.Column="0"
                        VerticalAlignment="Center"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="HomeButton_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/RobotBarApp;component/Resources/Icons/Roberts_robotbar_logo.png"
                               Margin="0,5,10,10"
                               Stretch="Uniform"/>
                    </StackPanel>
                </Button>

                <!-- Hamburger menu button -->
                <Button Grid.Column="2"
                        Width="70"
                        Height="70"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="MenuButton_Click">
                    <!-- Use the new menu icon from Resources/Icons/menu.png -->
                    <Image
                           Height="59"
                           VerticalAlignment="Center"
                           Source="/RobotBarApp;component/Resources/Icons/menu.png"
                           Stretch="Uniform"/>
                </Button>
            </Grid>
        </Border>

        <!-- MAIN CONTENT + OVERLAY + SLIDING SIDE MENU -->
        <Grid Grid.Row="1">
            <!-- Main content -->
            <Border Background="#FFE5E5E5">
                <!-- Host for dynamic views -->
                <ContentControl x:Name="MainContentHost" />
            </Border>

            <!-- Overlay (appears when menu is open) -->
            <Rectangle x:Name="MenuOverlay"
                       Fill="Black"
                       Opacity="0"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       MouseLeftButtonDown="MenuOverlay_MouseLeftButtonDown"/>

            <!-- Sliding Side Menu -->
            <Border x:Name="SideMenu"
                    Width="260"
                    Background="#FFDDDDDD"
                    HorizontalAlignment="Right"
                    Panel.ZIndex="2"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TranslateTransform X="260" />
                </Border.RenderTransform>
                <StackPanel Margin="20">
                    <TextBlock Text="Menu"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>
                    <Button Content="Opstart" Margin="0,0,0,10" Height="35" Click="OpstartButton_Click"/>
                    <Button Content="Statistik" Margin="0,0,0,10" Height="35" Click="StatistikButton_Click"/>
                    <Button Content="Katalog" Margin="0,0,0,10" Height="35" Click="KatalogButton_Click"/>
                    <Button Content="Tilføj Ingrediens" Margin="0,0,0,10" Height="35" Click="TilfoejIngrediensButton_Click"/>
                    <Button Content="Tilføj Drink" Margin="0,0,0,10" Height="35" Click="TilfoejDrinkButton_Click"/>
                    <Button Content="Tilføj Menu" Margin="0,0,0,10" Height="35" Click="TilfoejMenuButton_Click"/>
                    <Button Content="Tilføj Event" Margin="0,0,0,10" Height="35" Click="TilfoejEventButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
