<UserControl x:Class="RobotBarApp.View.KundeMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:view="clr-namespace:RobotBarApp.View"
             xmlns:behaviors="clr-namespace:RobotBarApp.Behaviors"
             xmlns:ui="clr-namespace:RobotBarApp.Services.UI"
             Background="Black">

    <UserControl.Resources>
        <!-- Shared sizing settings (initialized once from primary screen size) -->
        <ObjectDataProvider x:Key="CarouselSizing"
                            ObjectType="{x:Type ui:CarouselSizingSettings}"
                            MethodName="get_Instance" />
    </UserControl.Resources>

    <Grid>
        <!-- Background (optional image); otherwise keep black -->
        <Grid.Background>
            <SolidColorBrush Color="#111111"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="*"/>     <!-- Content -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="28,18,28,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back button (image-only) -->
            <Button Command="{Binding BackCommand}"
                    Width="160"
                    Height="60"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand">
                <Image Source="/Resources/Icons/ArrowWhiteLeft.png"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>

            <!-- Logo centered -->
            <Image Grid.Column="1"
                   Source="/Resources/Icons/Roberts_robotbar_logo.png"
                   Height="70"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Grid>

        <!-- CONTENT -->
        <Grid Grid.Row="1" Margin="40,20,40,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Optional left arrow (big touch target) -->
            <Button Grid.Column="0"
                    Width="90" Height="250"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ScrollLeft_Click"
                    VerticalAlignment="Center">
                <Image Source="/Resources/Icons/ArrowWhiteLeft.png" 
                       Stretch="Uniform"/>
            </Button>

            <!-- Horizontal scroll area -->
            <Border Grid.Column="1" Background="Transparent">
                <ScrollViewer x:Name="DrinksScroll"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Disabled"
                              PanningMode="HorizontalOnly"
                              PanningDeceleration="0.002"
                              IsManipulationEnabled="True"
                              CanContentScroll="False"
                              behaviors:CenteredSnapCarouselBehavior.IsEnabled="True"
                              behaviors:CenteredSnapCarouselBehavior.ItemTemplateRootName="CardRoot"
                              behaviors:CenteredSnapCarouselBehavior.HighlightScale="1.15"
                              behaviors:CenteredSnapCarouselBehavior.SnapDebounceMs="220"
                              behaviors:CenteredSnapCarouselBehavior.SnapAnimationMs="260"
                              behaviors:CenteredSnapCarouselBehavior.TapCommand="{Binding SelectDrinkCommand}">
                    <ItemsControl ItemsSource="{Binding Drinks}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="{Binding Source={StaticResource CarouselSizing}, Path=DrinkCardWidth}"
                                      Height="{Binding Source={StaticResource CarouselSizing}, Path=DrinkCardHeight}"
                                      Margin="{Binding Source={StaticResource CarouselSizing}, Path=DrinkCardMargin}"
                                      ClipToBounds="True">
                                    <view:KundeMenuItemCard x:Name="CardRoot"
                                                           Width="{Binding Source={StaticResource CarouselSizing}, Path=DrinkCardWidth}"
                                                           Height="{Binding Source={StaticResource CarouselSizing}, Path=DrinkCardHeight}"
                                                           Title="{Binding Name}"
                                                           ImageSource="{Binding Image}"
                                                           IngredientsText="{Binding IngredientsText}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Optional right arrow -->
            <Button Grid.Column="2"
                    Width="90" Height="250"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ScrollRight_Click"
                    VerticalAlignment="Center">
                <Image Source="/Resources/Icons/ArrowWhiteRight.png" 
                       Stretch="Uniform"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>
