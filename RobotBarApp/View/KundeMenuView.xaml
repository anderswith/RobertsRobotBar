<Window x:Class="RobotBarApp.View.KundeMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:RobotBarApp.View"
        Title="Kunde Menu"
        WindowState="Maximized"
        WindowStyle="None"
        Background="Black">

    <Grid>
        <!-- Background (optional image); otherwise keep black -->
        <Grid.Background>
            <SolidColorBrush Color="#111111"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="*"/>     <!-- Content -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="28,18,28,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back button (image-only) -->
            <Button Command="{Binding BackCommand}"
                    Width="160"
                    Height="60"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand">
                <Image Source="/Resources/Icons/ArrowWhiteLeft.png"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>

            <!-- Logo centered -->
            <Image Grid.Column="1"
                   Source="/Resources/Icons/Roberts_robotbar_logo.png"
                   Height="70"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Grid>

        <!-- CONTENT -->
        <Grid Grid.Row="1" Margin="40,20,40,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Optional left arrow (big touch target) -->
            <Button Grid.Column="0"
                    Width="90" Height="250"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ScrollLeft_Click"
                    VerticalAlignment="Center">
                <Image Source="/Resources/Icons/ArrowWhiteLeft.png" 
                       Stretch="Uniform"/>
            </Button>

            <!-- Horizontal scroll area -->
            <Border Grid.Column="1" Background="Transparent">
                <ScrollViewer x:Name="DrinksScroll"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Disabled"
                              PanningMode="HorizontalOnly"
                              PanningDeceleration="0.002"
                              CanContentScroll="True"
                              IsManipulationEnabled="True">
                    <ItemsControl ItemsSource="{Binding Drinks}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <view:KundeMenuItemCard
                                    Width="800"
                                    Height="1000"
                                    Margin="24,0"
                                    Title="{Binding Name}"
                                    ImageSource="{Binding ImagePath}"
                                    IngredientsText="{Binding IngredientsText}"
                                    Command="{Binding DataContext.SelectDrinkCommand,
                                  RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Optional right arrow -->
            <Button Grid.Column="2"
                    Width="90" Height="250"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ScrollRight_Click"
                    VerticalAlignment="Center">
                <Image Source="/Resources/Icons/ArrowWhiteRight.png" 
                       Stretch="Uniform"/>
            </Button>
        </Grid>
    </Grid>
</Window>
