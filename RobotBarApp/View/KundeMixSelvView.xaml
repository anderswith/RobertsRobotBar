<UserControl x:Class="RobotBarApp.View.KundeMixSelvView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:RobotBarApp.View"
             Background="#F2EEE6"
             Loaded="KundeMixSelvView_Loaded">

    <UserControl.Resources>
        <DataTemplate x:Key="IngredientCardTemplate">
            <view:KundeIngredientCard
                Width="240"
                Height="460"
                Margin="18,0"
                Title="{Binding Name}"
                ImagePath="{Binding ImagePath}"
                Click="IngredientCard_Click"/>
        </DataTemplate>

        <Style x:Key="QtyButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="46"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#F7F4EE"/>
            <Setter Property="BorderBrush" Value="#7C7C7C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="28,18,28,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back -->
            <Button Grid.Column="0"
                    Width="160"
                    Height="60"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Back_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Icons/ArrowGreenLeft.png"
                           Height="28"
                           Margin="0,0,10,0"/>
                    <TextBlock Text="Tilbage"
                               FontSize="26"
                               Foreground="#2F4A3B"/>
                </StackPanel>
            </Button>

            <!-- Logo -->
            <Image Grid.Column="1"
                   Source="/Resources/Icons/Roberts_robotbar_logo.png"
                   Height="70"
                   HorizontalAlignment="Center"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Grid>

        <!-- BODY -->
        <Grid Grid.Row="1" Margin="40,20,40,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="720"/>  <!-- Glass -->
                <ColumnDefinition Width="*"/>    <!-- Selected ingredient + BESTIL -->
                <ColumnDefinition Width="520"/>  <!-- Category selector -->
            </Grid.ColumnDefinitions>

            <!-- LEFT: Glass area (auto scaling via Viewbox, normalized coordinates 520x520) -->
            <Grid Grid.Column="0"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left"
                  Margin="0,0,40,0">

                <Viewbox Stretch="Uniform" Width="560" Height="560">
                    <Grid Width="520" Height="520">

                        <!-- Glass FIRST -->
                        <Image x:Name="GlassImage"
                               Panel.ZIndex="0"
                               Source="/Resources/Kundeview/Glass.png"
                               Stretch="Fill"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <!-- Liquid AFTER glass (clip applied in code-behind) -->
                        <Grid x:Name="LiquidLayer"
                              Panel.ZIndex="10"
                              Visibility="Collapsed">
                            <Grid.Clip>
                                <!-- replaced at runtime -->
                                <RectangleGeometry Rect="0,0,0,0"/>
                            </Grid.Clip>

                            <!-- Liquid disc -->
                            <Ellipse x:Name="LiquidDisc"
                                     Width="220"
                                     Height="20"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Margin="150,425,0,0"
                                     Opacity="0.95">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#E9FEFF" Offset="0.0"/>
                                        <GradientStop Color="#BFEFF2" Offset="0.55"/>
                                        <GradientStop Color="#7FD0D8" Offset="1.0"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Highlight -->
                            <Ellipse x:Name="LiquidHighlight"
                                     Width="120"
                                     Height="10"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Margin="190,432,0,0"
                                     Opacity="0.35">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#FFFFFFFF" Offset="0.0"/>
                                        <GradientStop Color="#00FFFFFF" Offset="1.0"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>

                        <!-- Connector line -->
                        <Rectangle x:Name="ConnectorLine"
                                   Panel.ZIndex="20"
                                   Width="240"
                                   Height="2"
                                   Fill="#2F4A3B"
                                   Visibility="Collapsed"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="410,412,0,0"/>
                    </Grid>
                </Viewbox>
            </Grid>

            <!-- MIDDLE: selected ingredient + BESTIL -->
            <Grid Grid.Column="1" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="SelectedIngredientPanel"
                            Grid.Row="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Visibility="Collapsed"
                            Margin="0,0,0,26">

                    <TextBlock x:Name="SelectedIngredientText"
                               Text="Vodka (2cl)"
                               FontSize="28"
                               Foreground="#2F4A3B"
                               VerticalAlignment="Center"
                               Margin="0,0,18,0"/>

                    <Button Style="{StaticResource QtyButtonStyle}"
                            Content="−"
                            Click="Minus_Click"
                            Margin="0,0,10,0"/>

                    <Button Style="{StaticResource QtyButtonStyle}"
                            Content="+"
                            Click="Plus_Click"/>
                </StackPanel>

                <Button x:Name="BestilButton"
                        Grid.Row="1"
                        Width="220"
                        Height="90"
                        HorizontalAlignment="Left"
                        Cursor="Hand"
                        Background="#F7F4EE"
                        BorderBrush="#2F4A3B"
                        BorderThickness="2"
                        Visibility="Collapsed"
                        Click="Bestil_Click">
                    <Image Source="/Resources/Icons/Bestil.png"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
            </Grid>

            <!-- RIGHT: category selector -->
            <StackPanel Grid.Column="2"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Width="360">

                <TextBlock Text="Byg din drink:"
                           FontSize="40"
                           FontWeight="SemiBold"
                           Foreground="#2F4A3B"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,30"/>

                <Button Content="Alkohol" Height="86" FontSize="30" Margin="0,0,0,26"
                        Cursor="Hand" Background="#F7F4EE" BorderBrush="#2F4A3B" BorderThickness="2"
                        Click="Category_Click" Tag="Alkohol"/>

                <Button Content="Mockohol" Height="86" FontSize="30" Margin="0,0,0,26"
                        Cursor="Hand" Background="#F7F4EE" BorderBrush="#2F4A3B" BorderThickness="2"
                        Click="Category_Click" Tag="Mockohol"/>

                <Button Content="Sirup" Height="86" FontSize="30" Margin="0,0,0,26"
                        Cursor="Hand" Background="#F7F4EE" BorderBrush="#2F4A3B" BorderThickness="2"
                        Click="Category_Click" Tag="Sirup"/>

                <Button Content="Sodavand" Height="86" FontSize="30" Margin="0,0,0,26"
                        Cursor="Hand" Background="#F7F4EE" BorderBrush="#2F4A3B" BorderThickness="2"
                        Click="Category_Click" Tag="Sodavand"/>
            </StackPanel>

            <!-- OVERLAY -->
            <Grid x:Name="Overlay"
                  Grid.ColumnSpan="3"
                  Background="#99000000"
                  Visibility="Collapsed">

                <Border Width="1500"
                        Height="720"
                        Background="White"
                        CornerRadius="6"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="OverlayTitle"
                                   FontSize="44"
                                   FontWeight="SemiBold"
                                   Foreground="#2F4A3B"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,30"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Width="90"
                                    Height="250"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="OverlayScrollLeft_Click"
                                    VerticalAlignment="Center">
                                <Image Source="/Resources/Icons/ArrowGreenLeft.png" Stretch="Uniform"/>
                            </Button>

                            <ScrollViewer x:Name="OverlayScroll"
                                          Grid.Column="1"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Disabled"
                                          PanningMode="HorizontalOnly"
                                          IsManipulationEnabled="True"
                                          CanContentScroll="True">
                                <ItemsControl x:Name="OverlayItems">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>

                            <Button Grid.Column="2"
                                    Width="90"
                                    Height="250"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="OverlayScrollRight_Click"
                                    VerticalAlignment="Center">
                                <Image Source="/Resources/Icons/ArrowGreenRight.png" Stretch="Uniform"/>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
