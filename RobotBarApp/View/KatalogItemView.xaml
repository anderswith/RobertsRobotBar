<UserControl x:Class="RobotBarApp.View.KatalogItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="220"
             d:DesignWidth="170">

    <UserControl.Resources>
        <!-- Footer action buttons on katalog cards -->
        <Style x:Key="KatalogCardActionButton" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Border Margin="10"
            Width="170"
            Height="220"
            CornerRadius="18"
            Background="#FFE5E5E5"
            BorderBrush="#FFC0C0C0"
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    CornerRadius="18,18,0,0"
                    Background="#FFC2D7E8">
                <TextBlock Text="{Binding Name}"
                           Margin="10,0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"
                           TextTrimming="CharacterEllipsis"/>
            </Border>

            <!-- Image -->
            <Border Grid.Row="1"
                    Background="White"
                    Margin="10,5">
                <Image Source="{Binding Image}"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="2"
                    CornerRadius="0,0,18,18"
                    Background="#FFC2D7E8">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <Button Content="Rediger"
                            Style="{StaticResource KatalogCardActionButton}"
                            Margin="0,0,5,0"
                            Padding="6,2"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding EditCommand}"/>

                    <TextBlock Text="|"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>

                    <Button Content="Slet"
                            Style="{StaticResource KatalogCardActionButton}"
                            Padding="6,2"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding DeleteCommand}"/>

                </StackPanel>
            </Border>
        </Grid>

    </Border>
</UserControl>
