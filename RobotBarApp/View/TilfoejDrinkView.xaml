<UserControl x:Class="RobotBarApp.View.TilfoejDrinkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000"
             Background="#FFE5E5E5">

    <Border HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,20,0,0"
            Padding="30"
            Background="Transparent">

        <!-- Shared size for Alkohol/Syrup/Sodavand inner grids -->
        <Grid Grid.IsSharedSizeScope="True">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>   <!-- Navn / Mocktail / Script -->
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>   <!-- Billed -->
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>   <!-- Alkohol -->
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>   <!-- Syrup -->
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>   <!-- Sodavand -->
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>   <!-- Buttons -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>   <!-- labels -->
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>      <!-- content -->
            </Grid.ColumnDefinitions>

            <!-- ========== Row 0: Navn / Mocktail / Script ========== -->

            <TextBlock Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Text="Navn:"/>

            <Grid Grid.Row="0" Grid.Column="2" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Navn -->
                <TextBox Grid.Column="0"
                         Height="35"
                         Width="250"
                         FontSize="16"
                         Padding="6"
                         HorizontalAlignment="Left"
                         Text="{Binding DrinkName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Mocktail? -->
                <TextBlock Grid.Column="2"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Text="Mocktail?"/>

                <CheckBox Grid.Column="4"
                          VerticalAlignment="Center"
                          IsChecked="{Binding IsMocktail, Mode=TwoWay}" />

                <!-- Script -->
                <TextBlock Grid.Column="6"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Text="Script:"/>

                <TextBox Grid.Column="8"
                         Height="35"
                         Width="250"
                         FontSize="16"
                         Padding="6"
                         HorizontalAlignment="Left"
                         Text="{Binding ScriptText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <!-- ========== Row 2: Billed ========== -->

            <TextBlock Grid.Row="2" Grid.Column="0"
                       VerticalAlignment="Top"
                       FontSize="18"
                       Text="Billed:"/>

            <StackPanel Grid.Row="2" Grid.Column="2"
                        Orientation="Horizontal"
                        Margin="0,0,0,15"
                        HorizontalAlignment="Left">
                <Border Width="80" Height="60"
                        BorderBrush="Black"
                        BorderThickness="2"
                        Background="White"
                        Margin="0,0,10,0">
                    <Image Source="{Binding ImagePreview}"
                           Stretch="Uniform"/>
                </Border>

                <Button Content="Vælg"
                        Width="90"
                        Height="35"
                        Padding="10,2"
                        VerticalAlignment="Center"
                        Command="{Binding ChooseImageCommand}" />
            </StackPanel>


            <!-- ========== Row 4: Alkohol (defines shared column sizes) ========== -->

            <TextBlock Grid.Row="4" Grid.Column="0"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Text="Alkohol:"/>

            <Grid Grid.Row="4" Grid.Column="2"
                  Margin="0,0,0,5"
                  HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" SharedSizeGroup="DrinkCol1"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" SharedSizeGroup="DrinkCol2"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" SharedSizeGroup="DrinkCol3"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" SharedSizeGroup="DrinkCol4"/>
                </Grid.ColumnDefinitions>

                <!-- Slot 1 -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <ComboBox Width="150"
                              Height="35"
                              FontSize="14"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding AlcoholOptions}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="IngredientId"
                              SelectedItem="{Binding SelectedAlcohol1}" />


                    <Grid Width="80" Height="35"
                          Margin="5,0,0,0"
                          HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="22"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="{Binding AlcoholAmount1}" />
                            <TextBlock Text="cl" Margin="3,0,0,0"/>
                        </StackPanel>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0"
                                    Content="▲"
                                    Padding="0"
                                    FontSize="10"
                                    Command="{Binding IncreaseAlcoholAmount1Command}" />
                            <Button Grid.Row="1"
                                    Content="▼"
                                    Padding="0"
                                    FontSize="10"
                                    Command="{Binding DecreaseAlcoholAmount1Command}" />
                        </Grid>
                    </Grid>
                </StackPanel>

                <!-- Slot 2 -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <ComboBox Width="150"
                              Height="35"
                              FontSize="14"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding AlcoholOptions}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="IngredientId"
                              SelectedItem="{Binding SelectedAlcohol2}" />


                    <Grid Width="80" Height="35"
                          Margin="5,0,0,0"
                          HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="22"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="{Binding AlcoholAmount2}" />
                            <TextBlock Text="cl" Margin="3,0,0,0"/>
                        </StackPanel>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0"
                                    Content="▲"
                                    Padding="0"
                                    FontSize="10"
                                    Command="{Binding IncreaseAlcoholAmount2Command}" />
                            <Button Grid.Row="1"
                                    Content="▼"
                                    Padding="0"
                                    FontSize="10"
                                    Command="{Binding DecreaseAlcoholAmount2Command}" />
                        </Grid>
                    </Grid>
                </StackPanel>

                <!-- Slot 3 -->
                <StackPanel Grid.Column="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <ComboBox Width="150"
                              Height="35"
                              FontSize="14"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding AlcoholOptions}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="IngredientId"
                              SelectedItem="{Binding SelectedAlcohol3}" />


                    <Grid Width="80" Height="35"
                          Margin="5,0,0,0"
                          HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="22"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="{Binding AlcoholAmount3}" />
                            <TextBlock Text="cl" Margin="3,0,0,0"/>
                        </StackPanel>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0"
                                    Content="▲"
                                    Padding="0"
                                    FontSize="10"
                                    Command="{Binding IncreaseAlcoholAmount3Command}" />
                            <Button Grid.Row="1"
                                    Content="▼"
                                    Padding="0"
                                    FontSize="10"
                                    Command="{Binding DecreaseAlcoholAmount3Command}" />
                        </Grid>
                    </Grid>
                </StackPanel>

                <!-- Slot 4 -->
                <StackPanel Grid.Column="6"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <ComboBox Width="150"
                              Height="35"
                              FontSize="14"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding AlcoholOptions}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="IngredientId"
                              SelectedItem="{Binding SelectedAlcohol4}" />


                    <Grid Width="80" Height="35"
                          Margin="5,0,0,0"
                          HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="22"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="{Binding AlcoholAmount4}" />
                            <TextBlock Text="cl" Margin="3,0,0,0"/>
                        </StackPanel>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0"
                                    Content="▲"
                                    Padding="0"
                                    FontSize="10"
                                    Command="{Binding IncreaseAlcoholAmount4Command}" />
                            <Button Grid.Row="1"
                                    Content="▼"
                                    Padding="0"
                                    FontSize="10"
                                    Command="{Binding DecreaseAlcoholAmount4Command}" />
                        </Grid>
                    </Grid>
                </StackPanel>
            </Grid>


            <!-- ========== Row 6: Syrup (shares column widths with Alcohol) ========== -->

            <TextBlock Grid.Row="6" Grid.Column="0"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Text="Syrup:"/>

            <Grid Grid.Row="6" Grid.Column="2"
                  Margin="0,0,0,5"
                  HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" SharedSizeGroup="DrinkCol1"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" SharedSizeGroup="DrinkCol2"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" SharedSizeGroup="DrinkCol3"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" SharedSizeGroup="DrinkCol4"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0"
                          Width="150"
                         Height="35"
                         FontSize="14"
                         HorizontalAlignment="Left"
                         ItemsSource="{Binding SyrupOptions}"
                         DisplayMemberPath="Name"
                         SelectedValuePath="IngredientId"
                         SelectedItem="{Binding SelectedSyrup1}" />


                <ComboBox Grid.Column="2" 
                            Width="150"
                          Height="35"
                          FontSize="14"
                          HorizontalAlignment="Left"
                          ItemsSource="{Binding SyrupOptions}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="IngredientId"
                          SelectedItem="{Binding SelectedSyrup2}" />


                <ComboBox Grid.Column="4" 
                    Width="150"
                          Height="35"
                          FontSize="14"
                          HorizontalAlignment="Left"
                          ItemsSource="{Binding SyrupOptions}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="IngredientId"
                          SelectedItem="{Binding SelectedSyrup3}" />

            </Grid>


            <!-- ========== Row 8: Sodavand (shares column widths) ========== -->

            <TextBlock Grid.Row="8" Grid.Column="0"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Text="Sodavand:"/>

            <Grid Grid.Row="8" Grid.Column="2"
                  Margin="0,0,0,5"
                  HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" SharedSizeGroup="DrinkCol1"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" SharedSizeGroup="DrinkCol2"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" SharedSizeGroup="DrinkCol3"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" SharedSizeGroup="DrinkCol4"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0"
                    Width="150"
                     Height="35"
                     FontSize="14"
                     HorizontalAlignment="Left"
                     ItemsSource="{Binding SodaOptions}"
                     DisplayMemberPath="Name"
                     SelectedValuePath="IngredientId"
                     SelectedItem="{Binding SelectedSoda1}" />


                <ComboBox Grid.Column="2"
                    Width="150"
                     Height="35"
                     FontSize="14"
                     HorizontalAlignment="Left"
                     ItemsSource="{Binding SodaOptions}"
                     DisplayMemberPath="Name"
                     SelectedValuePath="IngredientId"
                     SelectedItem="{Binding SelectedSoda2}" />
                
                

            </Grid>


            <!-- ========== Row 10: Buttons ========== -->

            <Button Grid.Row="10" Grid.Column="0"
                    Content="Guide"
                    Width="100"
                    Height="40"
                    Margin="0,20,0,0"
                    Background="#FFB0B0B0"
                    BorderBrush="#FF888888"
                    Command="{Binding GuideCommand}" />

            <StackPanel Grid.Row="10" Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="Annullér"
                        Width="110"
                        Height="40"
                        Background="White"
                        Margin="0,0,10,0"
                        Command="{Binding CancelCommand}" />
                <Button Content="Gem"
                        Width="110"
                        Height="40"
                        Background="#FF6BE86B"
                        Command="{Binding SaveCommand}" />
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
