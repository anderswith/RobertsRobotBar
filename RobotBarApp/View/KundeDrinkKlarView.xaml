<UserControl x:Class="RobotBarApp.View.KundeDrinkKlarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <!-- Full-screen overlay that also acts as "tap anywhere to continue" -->
    <Grid Background="#CC000000">

        <!-- This transparent button captures any click/tap anywhere on the screen -->
        <Button Command="{Binding DismissCommand}"
                Background="Transparent"
                BorderThickness="0"
                Focusable="False" />

        <!-- Centered popup card -->
        <Border Width="600"
                Height="400"
                CornerRadius="18"
                Background="#FF111111"
                BorderBrush="#33FFFFFF"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                SnapsToDevicePixels="True">

            <Grid Margin="28">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>   <!-- Logo -->
                    <RowDefinition Height="24"/>     <!-- Spacer -->
                    <RowDefinition Height="Auto"/>   <!-- Værsgo' -->
                    <RowDefinition Height="12"/>     <!-- Spacer -->
                    <RowDefinition Height="Auto"/>   <!-- Instruction -->
                    <RowDefinition Height="*"/>      <!-- Spacer -->
                    <RowDefinition Height="Auto"/>   <!-- Bottom area -->
                </Grid.RowDefinitions>

                <!-- Logo (adjust the Source path to your actual asset) -->
                <Image Grid.Row="0"
                       Height="90"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       Source="/Resources/Icons/Roberts_robotbar_logo.png" />

                <!-- Title -->
                <TextBlock Grid.Row="2"
                           Text="Værsgo'"
                           Foreground="White"
                           FontSize="46"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           HorizontalAlignment="Center" />

                <!-- Instruction -->
                <TextBlock Grid.Row="4"
                           Text="Du må nu tage din drink"
                           Foreground="#E6FFFFFF"
                           FontSize="26"
                           FontWeight="SemiBold"
                           TextAlignment="Center"
                           HorizontalAlignment="Center" />

                <!-- Bottom: countdown + draining line -->
                <Grid Grid.Row="6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Bottom-left countdown -->
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Margin="0,0,16,8"
                               Text="{Binding SecondsRemaining}"
                               Foreground="#CCFFFFFF"
                               FontSize="22"
                               FontWeight="Bold"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Left" />

                    <!-- Draining line (right-to-left) -->
                    <ProgressBar Grid.Row="1"
                                 Grid.Column="0"
                                 Grid.ColumnSpan="2"
                                 Height="4"
                                 Minimum="0"
                                 Maximum="1"
                                 Value="{Binding Progress}"
                                 FlowDirection="RightToLeft"
                                 Background="#2BFFFFFF"
                                 Foreground="#FFFFFFFF"
                                 BorderThickness="0" />
                </Grid>

            </Grid>
        </Border>
    </Grid>
</UserControl>
