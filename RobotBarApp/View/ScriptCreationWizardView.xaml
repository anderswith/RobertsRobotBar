<UserControl x:Class="RobotBarApp.View.ScriptCreationWizardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Guide: Opret scripts"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       DockPanel.Dock="Left" />

            <TextBlock Text="{Binding StepCounterText}"
                       FontSize="16"
                       Foreground="#666"
                       HorizontalAlignment="Right"
                       DockPanel.Dock="Right" />
        </DockPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Image (optional) -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="12"
                    Padding="16"
                    Margin="0,0,20,0">
                <Image Source="{Binding CurrentStep.ImageSource}"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            </Border>

            <!-- Text -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="12"
                    Padding="24">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{Binding CurrentStep.Title}"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="#333"
                                   TextWrapping="Wrap" />

                        <TextBlock Text="{Binding CurrentStep.Description}"
                                   Margin="0,14,0,0"
                                   FontSize="16"
                                   Foreground="#444"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Luk"
                    Padding="14,8"
                    MinWidth="90"
                    Command="{Binding CloseCommand}" />

            <Button Grid.Column="2"
                    Content="Forrige"
                    Padding="14,8"
                    MinWidth="110"
                    Margin="0,0,10,0"
                    Command="{Binding PreviousCommand}" />

            <Button Grid.Column="3"
                    Content="Næste"
                    Padding="14,8"
                    MinWidth="110"
                    Command="{Binding NextCommand}" />
        </Grid>
    </Grid>
</UserControl>

