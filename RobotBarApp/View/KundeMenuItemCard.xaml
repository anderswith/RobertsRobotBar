<UserControl x:Class="RobotBarApp.View.KundeMenuItemCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:RobotBarApp.Converters"
             x:Name="Root">
    <UserControl.Resources>
        <converters:PathToImageConverter x:Key="PathToImageConverter" />
    </UserControl.Resources>

    <Button Background="Transparent"
            Width="{Binding ActualWidth, ElementName=Root}"
            Height="{Binding ActualHeight, ElementName=Root}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderThickness="0"
            Padding="0"
            Cursor="Hand"
            Command="{Binding Command, ElementName=Root}"
            CommandParameter="{Binding}">
        <Border CornerRadius="18"
                Width="{Binding ActualWidth, ElementName=Root}"
                Height="{Binding ActualHeight, ElementName=Root}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ClipToBounds="True"
                Background="#F4F4F4"
                BorderBrush="#D0D0D0"
                BorderThickness="2">
            <Grid Margin="18">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{Binding Title, ElementName=Root}"
                           FontSize="34"
                           FontWeight="SemiBold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,14"/>

                <!-- Fixed image frame: always fills the available middle-row area; image scales uniformly inside (no cropping). -->
                <Border Grid.Row="1"
                        Background="#FFFFFF"
                        CornerRadius="10"
                        ClipToBounds="True">
                    <Image Source="{Binding ImageSource, ElementName=Root, Converter={StaticResource PathToImageConverter}, ConverterParameter=Drink}"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Border>

                <TextBlock Grid.Row="2"
                           Text="{Binding IngredientsText, ElementName=Root}"
                           FontSize="18"
                           Foreground="Black"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="6,10,6,8"/>
            </Grid>
        </Border>
    </Button>
</UserControl>